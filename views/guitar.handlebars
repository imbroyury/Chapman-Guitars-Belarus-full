<div class="grid-page-wrap guitar-page">
    {{>header}}
    <section class="main-section">
        <h1 class="model-name">Chapman {{guitar.name}}</h1>
        <div class="specs-table">
            <div class="table-header"><h2>Спецификация</h2></div>
            <div class="table-row">
                <div class="item-name">Гриф</div>
                <div class="item-description">Клен с матовым финишем</div>
            </div>
            <div class="table-row">
                <div class="item-name">Накладка</div>
                <div class="item-description">Макассарский эбен</div>
            </div>
            <div class="table-row">
                <div class="item-name">Hardcoded ... </div>
                <div class="item-description">24 джамбо лада (никель)</div>
            </div>
            <div class="table-row">
                <div class="item-name">Доступные цвета</div>
                <div class="item-description">
                    {{#each guitar.colors}}
                        <img
                            class="guitar-color"
                            src="/{{this.tab_image}}"
                            alt="color-{{@index}}"
                        >
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="model-photos-gallery">
            {{#each guitar.colors}}
                <img class="model-photo" src="/{{this.guitar_image}}" alt="{{../this.name}}-{{@index}}">
            {{/each}}
        </div>
    </section>
    {{>menu}}
    {{>footer}}
</div>